{
    "compilerOptions": {
        "target": "es5",
        "module": "umd",
        "outDir": "./lib",
        "strict": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noUnusedParameters": true,
        "noUnusedLocals": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "strictPropertyInitialization": true,
        "importHelpers": false,
        "sourceMap": false,
        "declaration": true,
        "esModuleInterop": true,
        "types": [],
        "lib": ["es6"]
    },
    "include": [
        "src/**/*.ts",
    ],
    "exclude": [
        "node_modules",
        "tests/**/*.ts",
        "lib"
    ]
}